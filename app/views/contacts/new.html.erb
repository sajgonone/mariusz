<h1 id="page_tittle">Contact Form</h1>

<div class="background">
  <%= background-color: #212529; %><br>
  <%= background-image: url("../img/map-image.png"); %><br> 
  <%= background-repeat: no-repeat; %><br>
  <%= background-position: center; %>
  </div>

<div class="skinny_wrapper wrapper_padding">
<%= form_for @contact do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true %>
    
    <br>

    <%= f.label :email %><br>
    <%= f.email_field :email, required: true %>

    <br>

    <%= f.label :phone %><br>
    <%= f.email_field :phone, required: true %>

    <br>

    <%= f.label :message %><br>
    <%= f.text_area :message, as: :text %>


    <div class="hidden">
      <%= f.label :nickname %><br>
      <%= f.text_field :nickname, hint: 'leave this field blank' %>
      </div>

      <%= f.submit 'Send Message', class: "button" %>
      <% end %>
</div>